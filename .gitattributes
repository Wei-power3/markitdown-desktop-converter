# Handle line endings
* text=auto
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Binary files
*.pdf binary
*.pptx binary
*.ppt binary
*.doc binary
*.docx binary
*.xlsx binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary

# Export-ignore (don't include in releases)
.github/ export-ignore
tests/ export-ignore
.gitignore export-ignore
.gitattributes export-ignore
pytest.ini export-ignore
requirements-test.txt export-ignore